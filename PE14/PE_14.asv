clear, clc;
tic
collatz_length = []; %preallocating collatz matrix
i = 1; %set for counter
for n = 1000000:-1:700000 %index from max, subtracting 1, to arbitrary min 
    f(1) = n; 
    ii = 1;
    while f(ii) > 1 
        if rem(f(ii),2) == 0
            f(ii+1) = f(ii)*.5;
        else
            f(ii+1) = 3*f(ii)+1;
        end
        ii = ii + 1;
    end
    i = i + 1;
    collatz_length(i,:) = [n,ii];
end
[M,I] = max(collatz_length(:,2));
collatz_length(I,:)
toc